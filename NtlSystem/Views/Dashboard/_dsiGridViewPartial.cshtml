@{
    var grid = Html.DevExpress().GridView(settings =>
    {
        settings.Name = "dsiGridView";
        settings.CallbackRouteValues = new { Controller = "Dashboard", Action = "dsiGridViewPartial" };

        settings.KeyFieldName = "name";

        settings.Width = Unit.Percentage(100);

        settings.SettingsPager.Visible = true;
        settings.Settings.ShowGroupPanel = false;
        settings.Settings.ShowFilterRow = false;
        settings.SettingsBehavior.AllowSelectByRowClick = true;

        // Platform
        settings.Columns.Add(col =>
        {
            col.FieldName = "platform";
            col.Caption = "Platform";
        });

        // Total RunTime
        settings.Columns.Add(col =>
        {
            col.FieldName = "totalRuntime";
            col.Caption = "Total Runtime";

            col.ColumnType = MVCxGridViewColumnType.SpinEdit;
            SpinEditProperties prop = col.PropertiesEdit as SpinEditProperties;
            prop.NumberType = SpinEditNumberType.Integer;
            prop.MinValue = 0;
            prop.MaxValue = 10000000;
            prop.DisplayFormatString = "N0";

            col.EditFormSettings.Visible = DefaultBoolean.False;
        });
        
        // Sales
        settings.Columns.Add(col =>
        {
            col.FieldName = "totalSales";
            col.Caption = "NTL Sales";

            col.ColumnType = MVCxGridViewColumnType.SpinEdit;
            SpinEditProperties prop = col.PropertiesEdit as SpinEditProperties;
            prop.NumberType = SpinEditNumberType.Integer;
            prop.MinValue = 0;
            prop.MaxValue = 10000000;
            prop.DisplayFormatString = "N0";

            col.EditFormSettings.Visible = DefaultBoolean.False;
        });

        // Sales
        settings.Columns.Add(col =>
        {
            col.FieldName = "totalSales";
            col.Caption = "Odoo Sales";

            col.ColumnType = MVCxGridViewColumnType.SpinEdit;
            SpinEditProperties prop = col.PropertiesEdit as SpinEditProperties;
            prop.NumberType = SpinEditNumberType.Integer;
            prop.MinValue = 0;
            prop.MaxValue = 10000000;
            prop.DisplayFormatString = "N0";

            col.EditFormSettings.Visible = DefaultBoolean.False;
        });

        // Sales
        settings.Columns.Add(col =>
        {
            col.FieldName = "totalSales";
            col.Caption = "Selenium Sales";

            col.ColumnType = MVCxGridViewColumnType.SpinEdit;
            SpinEditProperties prop = col.PropertiesEdit as SpinEditProperties;
            prop.NumberType = SpinEditNumberType.Integer;
            prop.MinValue = 0;
            prop.MaxValue = 10000000;
            prop.DisplayFormatString = "N0";

            col.EditFormSettings.Visible = DefaultBoolean.False;
        });

        // Cancellation
        settings.Columns.Add(col => {
            col.FieldName = "Cancellation";
            col.UnboundType = DevExpress.Data.UnboundColumnType.String;
        });

        // LMD
        settings.Columns.Add(col =>
        {
            col.FieldName = "LMDSales";
            col.Caption = "LMD Sales";

            col.ColumnType = MVCxGridViewColumnType.SpinEdit;
            SpinEditProperties prop = col.PropertiesEdit as SpinEditProperties;
            prop.NumberType = SpinEditNumberType.Integer;
            prop.MinValue = 0;
            prop.MaxValue = 10000000;
            prop.DisplayFormatString = "N0";

            col.EditFormSettings.Visible = DefaultBoolean.False;
        });

        // MTD
        settings.Columns.Add(col =>
        {
            col.FieldName = "MTDSales";
            col.Caption = "MTD Sales";

            col.ColumnType = MVCxGridViewColumnType.SpinEdit;
            SpinEditProperties prop = col.PropertiesEdit as SpinEditProperties;
            prop.NumberType = SpinEditNumberType.Integer;
            prop.MinValue = 0;
            prop.MaxValue = 10000000;
            prop.DisplayFormatString = "N0";

            col.EditFormSettings.Visible = DefaultBoolean.False;
        });

        // L5
        settings.Columns.Add(col =>
        {
            col.FieldName = "L5Sales";
            col.Caption = "L5 Sales";

            col.ColumnType = MVCxGridViewColumnType.SpinEdit;
            SpinEditProperties prop = col.PropertiesEdit as SpinEditProperties;
            prop.NumberType = SpinEditNumberType.Integer;
            prop.MinValue = 0;
            prop.MaxValue = 10000000;
            prop.DisplayFormatString = "N0";

            col.EditFormSettings.Visible = DefaultBoolean.False;
        });

        // Status
        settings.Columns.Add(col => {
            col.FieldName = "status";
            col.Caption = "Status";
        });

        // Last Runtime
        settings.Columns.Add(col =>
        {
            col.FieldName = "lastRuntime";
            col.Caption = "Last RunTime";

            col.ColumnType = MVCxGridViewColumnType.DateEdit;
            col.PropertiesEdit.DisplayFormatString = "yyyy-MM-dd HH:mm:ss";

            DateEditProperties prop = col.PropertiesEdit as DateEditProperties;
            prop.DisplayFormatString = "yyyy-MM-dd HH:mm:ss";
            prop.DisplayFormatInEditMode = true;
        });

        settings.CustomUnboundColumnData = (s, e) =>
        {
            if (e.Column.FieldName.Equals("Cancellation")) {
                e.Value = "0";
            };
        };

        // Header Set Center
        settings.Styles.Header.HorizontalAlign = HorizontalAlign.Center;
        settings.Styles.Header.VerticalAlign = VerticalAlign.Middle;

        // Cell Styles Center
        settings.Styles.Cell.HorizontalAlign = HorizontalAlign.Center;
        settings.Styles.Cell.VerticalAlign = VerticalAlign.Middle;
    });

    if (ViewData["EditError"] != null)
    {
        grid.SetEditErrorText((string)ViewData["EditError"]);
    }
}
@grid.Bind(Model).GetHtml()
