@using NtlSystem.Models.DashboardModels
@using System.Collections.Generic
@model List<mDashboardChatItem>

<table class="table table-bordered table-hover text-center tablesort">
    <thead>
        <tr class="bg-dark">
            <th class="text-white">Platform</th>
            <th class="text-white">Today Runtime</th>
            <th class="text-white">Status</th>
            <th class="text-white">Last Run Time</th>
            <th class="text-white">Last Message Time</th>
        </tr>
    </thead>
    <tbody>
        @foreach(var obj in Model) {
            string lastRtDtStr = obj.lastRuntime.ToString("yyyy-MM-dd");
            string lastMsgDtStr = obj.lastMessageTime.ToString("yyyy-MM-dd");
            <tr>
                <td>@obj.platform</td>
                <td>@obj.todayRuntime</td>
                <td>@obj.status</td>
                <td>@lastRtDtStr</td>
                <td>@lastMsgDtStr</td>
            </tr>
        }
    </tbody>
</table>
